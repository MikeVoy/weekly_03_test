<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/cart_item_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="39dp" />

    <ImageView
        android:id="@+id/cart_item_img"
        android:layout_width="102dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/cart_item_rb"
        android:layout_marginTop="-27dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/cart_item_title"
        android:layout_width="195dp"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/cart_item_img"
         android:layout_toRightOf="@+id/cart_item_img"
         android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="12dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/cart_item_sub"
        android:layout_width="19dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cart_item_img"
        android:layout_toLeftOf="@+id/cart_item_count"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="-"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/cart_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/cart_item_img"
        android:text="+"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/cart_item_count"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/cart_item_add"
        android:layout_alignBottom="@+id/cart_item_img"
        android:gravity="center"
        android:text="0"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/cart_item_bargainPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_toRightOf="@id/cart_item_img"
        android:layout_alignBottom="@+id/cart_item_count"
        android:text="￥66" />

    <TextView
        android:id="@+id/cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/cart_item_bargainPrice"
        android:layout_alignBottom="@id/cart_item_count"
        android:layout_marginBottom="2dp"
        android:text="￥66" />
</RelativeLayout>