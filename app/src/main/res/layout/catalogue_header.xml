<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/catalogue_iv_back"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="9dp"
        android:src="@mipmap/leftjiantou"/>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:id="@+id/rl_header"
        android:background="@drawable/circular_layout">
        <ImageView
            android:id="@+id/goods_list_iv_search"
            android:layout_width="18dp"
            android:layout_height="25dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/search_icon2"/>

        <EditText
            android:id="@+id/catalogue_et_name"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="2dp"
            android:textSize="15dp"
            android:background="@null"
            android:hint="搜索"/>

        <ImageView
            android:id="@+id/catalogue_iv_cancel"
            android:layout_width="22dp"
            android:layout_alignParentRight="true"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/a_3"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/catalogue_iv_switch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/kind_liner"/>


</RelativeLayout>